variable {α : Type*} (r s t : Set α)

example : s ⊆ s := by
  intro x xs
  exact xs

theorem Subset.refl : s ⊆ s := fun x xs ↦ xs

example : r ⊆ s → s ⊆ t → r ⊆ t := by
  intro hrs
  intro hst
  intro x hr
  apply hst
  apply hrs
  apply hr

theorem Subset.trans : r ⊆ s → s ⊆ t → r ⊆ t :=
  fun hrs hst _ hr => hst (hrs hr)

end

