    have := mem_closure_iff_comap_neBot.mp (hA y)
    apply hclosedV'.mem_of_tendsto (hœÜ y)
    exact mem_of_superset (preimage_mem_comap hVinNy) hcinvVssfinvV'
  ¬∑ intro a
    apply tendsto_nhds_unique _ f_cont.continuousAt
    rw [nhds_induced]
    exact hœÜ a

